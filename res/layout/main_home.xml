<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/lisview_bg">
    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp" 
  			android:background="@drawable/title_bar">  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="公交查询"
        		android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />    
				</RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/relativetwo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeone">
        
        <TextView 
            android:id="@+id/lessons_hintone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/gongjiao_hintone"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="15dp"/>
        
        <LinearLayout 
            android:id="@+id/buslineSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:layout_below="@+id/lessons_hintone"
            android:background="@drawable/main_regist_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView 
                android:id="@+id/backup_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/searchmap"/>
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="公交线路查询"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="查询广州市内公交线路信息"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/routeplanSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:layout_below="@+id/buslineSearch"
            android:background="@drawable/main_regist_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView 
                android:id="@+id/backup_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/searchearth"/>
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="出发地到目的地的线路"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="查询广州市内出发地到目的地线路"/>
            </LinearLayout>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/lessons_hinttwo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/gongjiao_hinttwo"
            android:textSize="15sp"
            android:textColor="@color/darkgreen"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>